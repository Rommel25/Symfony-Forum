{% extends 'base.html.twig' %}

{% block title %}Register !{% endblock %}

{% block body %}

<div id="registration" class="container d-flex align-items-center justify-content-center">
    <form method="post">
        <div class="card text-center">
            <div class="card-body">
                <h1 class="h3 font-weight-normal">Please register</h1>

                {{ form_start(form) }}
                {{ form_widget(form) }}
                {{ form_end(form) }}
            </div>
            You already have an account ? <a href="{{ path('app_login') }}">Sign in</a>
        </div>
            
    </form>
</div>
{% endblock %}
