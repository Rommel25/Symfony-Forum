{% extends 'base.html.twig' %}


{% block title %}Hello Sur le profile{% endblock %}

{% block body %}
    {% for flashMessage in app.flashes('success') %}
        <div class="alert alert-success">{{ flashMessage }}</div>
    {% endfor %}

    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>
    
<div class="bg-light pt-3 pb-3">
    <div class="example-wrapper" id="profile_page">

        <div class="row mb-2">
            <h1>{{ "Profile:" }}</h1>
        </div>
        <div class="row">
            <div class="col-6 mb-4 card">
                <div class="card-body">
                    <div class="email card-title">
                        <strong>{{ "Adresse Email:" }}</strong>
                    </div>
                    <p class="text-info card-text">
                        {{ user.email }}
                    </p>
                </div>
            </div>
            <div class="col-6 mb-4 card">
                <div class="card-body">
                    <div class="lycee card-title">
                        <strong>{{ "Nom Lycée:" }}</strong>
                    </div>
                    <p class="text-info card-text">
                        {{ lyceen.lycee }}
                    </p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-6 mb-4 card">
                <div class="card-body">
                    <div class="tel">
                        <strong>{{ "Téléphone:" }}</strong>
                    </div>
                    <p class="text-info card-text">
                        {{ user.telephone }}
                    </p>
                </div>
            </div>

            <div class="col-6 mb-4 card">
                <div class="card-body">
                    <div class="tel">
                       <strong>{{ "Section:" }}</strong>
                    </div>
                    <p class="text-info card-text">
                        {{ lyceen.section }}
                    </p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12 card">
                <div class="card-body">
                    <div class="tel">
                        <strong>{{ "Atelier:" }}</strong>
                    </div>
                    <p class="text-info card-text">
                        {% for atelier in ateliers %}
                    <li class="list-group-item">
                        <div class="part">
                            <strong>Nom:</strong><p class="text-info">{{ atelier.nom }}</p>
                        </div>
                        <div class="part">
                            <strong>Salle:</strong><p class="text-info">{{ atelier.salle }}</p>
                        </div>
                        <div class="part">
                            <strong>Secteur:</strong><p class="text-info">{{ atelier.secteur }}</p>
                        </div>
                        <!-- Ajoutez d'autres propriétés d'atelier si nécessaire -->
                    </li>
                        {% endfor %}
                    </p>
                </div>
            </div>
        </div>

    </div>
</div>
{% endblock %}

