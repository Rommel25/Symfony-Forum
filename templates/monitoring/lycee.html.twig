{% extends 'base.html.twig' %}

{% block title %}Hello MonitoringLyceeController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div id="lycee">

        <div class="container">
            <div class="row">
                <div class="col-6 card">
                    <div class="card-body">
                        <div class="tel">
                            <h5>
                                {{ "Nombre de lyceen inscrits:" }}
                            </h5>
                        </div>
                        {{ lyceens|length }}
                        <div class="liste">
                            <h5>
                                {{ "Liste des lyceen inscrits:" }}
                            </h5>
                        </div>
                        <p class="text-info card-text">
                            {% for lyceen in lyceens %}
                        <li class="list-group-item">
                            <strong>Nom:</strong> {{ lyceen.user.nom }}<br>
                            <strong>Prenom:</strong> {{ lyceen.user.prenom }}<br>
                            <strong> Nombre atelier Ateliers:</strong> {{ lyceen.ateliers|length }}<br>
                            <strong>Liste Ateliers:</strong> <br>{% for atelier in  lyceen.ateliers %}
                            {{ atelier }} <br>
                            {% endfor %}
                            <br>
                        </li>
                        {% endfor %}
                        </p>
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}
