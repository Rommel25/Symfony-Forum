{% extends 'base.html.twig' %}

{% block title %}Hello MonitoringLyceeController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="row">

        <div class="col-6 card">
            <div class="card-body">
                <div class="tel">
                    {{ "Nombre de lyceen inscrits:" }}
                </div>
                {{ atelier.lyceens|length }}
                <div class="tel">
                    {{ "Liste des lyceen inscrits:" }}
                </div>
                <p class="text-info card-text">
                    {% for lyceen in atelier.lyceens %}
                <li class="list-group-item">
                    <strong>Nom:</strong> {{ lyceen.user.nom }}<br>
                    <strong>Prenom:</strong> {{ lyceen.user.prenom }}<br>
                </li>
                {% endfor %}
                </p>
                <div class="tel">
                    {{ "Liste des métiers:" }}
                </div>
                <p class="text-info card-text">
                    {% for metier in atelier.metier %}
                <li class="list-group-item">
                    <strong>Métier :</strong> {{ metier.nom }}<br>
                </li>
                {% endfor %}

                </p>
                <div class="tel">
                    {{ "Liste des intervenets:" }}
                </div>
                <p class="text-info card-text">
                    {% for intervenant in atelier.intervenants %}
                <li class="list-group-item">
                    <strong>Nom:</strong> {{ intervenant.user.nom }}<br>
                <strong>Prenom:</strong> {{ intervenant.user.prenom }}<br>
            </li>
                {% endfor %}
                </p>

                <div class="tel">
                    {{ "Salle" }}
                </div>
                {{ atelier.salle }}



            </div>
        </div>
    </div>
{% endblock %}
