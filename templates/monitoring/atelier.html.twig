{% extends 'base.html.twig' %}

{% block title %}Hello MonitoringLyceeController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div id="atelier_monitoring">

        <div class="row">

            <div class="col-6 card">
                <div class="card-body">
                    <div class="tel">
                        <h5>{{ "Nombre de lyceen inscrits:" }}</h5>
                    </div>
                    {{ atelier.lyceens|length }}
                    <div class="liste">
                        <h5>{{ "Liste des lyceen inscrits:" }}</h5>
                    </div>
                    <p class="text-info card-text">
                        {% for lyceen in atelier.lyceens %}
                    <li class="list-group-item">
                        <strong>Nom:</strong> {{ lyceen.user.nom }}<br>
                        <strong>Prenom:</strong> {{ lyceen.user.prenom }}<br>
                    </li>
                    {% endfor %}
                    </p>
                    <div class="liste">
                        <h5>{{ "Liste des métiers:" }}</h5>
                    </div>
                    <p class="text-info card-text">
                        {% for metier in atelier.metier %}
                    <li class="list-group-item">
                        <strong>Métier :</strong> {{ metier.nom }}<br>
                    </li>
                    {% endfor %}

                    </p>
                    <div class="liste">
                        <h5>{{ "Liste des intervenets:" }}</h5>
                    </div>
                    <p class="text-info card-text">
                        {% for intervenant in atelier.intervenants %}
                    <li class="list-group-item">
                        <strong>Nom:</strong> {{ intervenant.user.nom }}<br>
                    <strong>Prenom:</strong> {{ intervenant.user.prenom }}<br>
                </li>
                    {% endfor %}
                    </p>

                    <div class="liste">
                        <h5>{{ "Salle" }}</h5>
                    </div>
                    {{ atelier.salle }}



                </div>
            </div>
        </div>

    </div>
{% endblock %}
